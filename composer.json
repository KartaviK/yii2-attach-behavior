{
    "name": "kartavik/yii2-attach-behavior",
    "description": "Behavior with restriction attach option",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Roman Varkuta",
            "email": "roman.varkuta@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": ">=7.2",
        "yiisoft/yii2": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Kartavik\\Yii2\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Kartavik\\Yii2\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "platform": {
            "php": "7.2"
        }
    },
    "scripts": {
        "lint": "phpcs --standard=PSR2 ./src ./tests",
        "phpcbf": "phpcbf --standard=PSR2 ./src ./tests",
        "cover": "phpunit --coverage-clover=coverage.xml",
        "test": "phpunit",
        "build": [
            "@lint",
            "@cover"
        ]
    },
    "require-dev": {
        "phpunit/phpunit": "^7.5",
        "squizlabs/php_codesniffer": "^3.4"
    }
}
